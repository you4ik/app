<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="taxify">
    <meta name="keywords" content="taxify">
    <meta name="author" content="taxify">
    <link rel="manifest" href="/manifest.json">
    <title> - Taxify Driver App</title>

    <!-- Google Fonts and Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.5.1/uicons-solid-rounded/css/uicons-solid-rounded.css'>

    <!-- Styles -->
    <link rel="stylesheet" href="/css/iconsax.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">

    <!-- Transition Styles -->
    <style>
        .fade-out {
            opacity: 0;
            transition: opacity 0.1s ease-out;
        }
        .fade-in {
            opacity: 1;
            transition: opacity 0.1s ease-in;
        }
    </style>
</head>

<body>

    <!-- Main content -->
    <main id="main-content" class="fade-in">
        <%- body %>
    </main>

    <!-- Bottom navbar starts -->
    <div class="navbar-menu">
        <ul>
            <li>
                <a href="/" id="nav-link">
                    <div class="icon">
                        <img class="unactive" src="/images/svg/home.svg" alt="home">
                        <img class="active" src="/images/svg/home-fill.svg" alt="home">
                    </div>
                    <span>Home</span>
                </a>
            </li>
            <li>
                <a href="/stats" id="nav-link">
                    <div class="icon">
                        <img class="unactive" src="/images/svg/driving.svg" alt="driving">
                        <img class="active" src="/images/svg/driving-fill.svg" alt="driving">
                    </div>
                    <span>Stats</span>
                </a>
            </li>
            <li>
                <a href="/my-rides" id="nav-link">
                    <div class="icon">
                        <img class="unactive" src="/images/svg/car.svg" alt="car">
                        <img class="active" src="/images/svg/car-fill.svg" alt="car">
                    </div>
                    <span>My Rides</span>
                </a>
            </li>
            <li>
                <a href="/setting" id="nav-link">
                    <div class="icon">
                        <img class="unactive" src="/images/svg/setting.svg" alt="setting">
                        <img class="active" src="/images/svg/setting-fill.svg" alt="setting">
                    </div>
                    <span>Setting</span>
                </a>
            </li>
        </ul>
    </div>
    <!-- Bottom navbar end -->

    <!-- Scripts -->
    <script src="/js/iconsax.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sticky-header.js"></script>
    <script src="/js/template-setting.js"></script>
    <script src="/js/script.js"></script>
   <script>
    document.addEventListener('DOMContentLoaded', function() {
  const cache = {};

  document.querySelectorAll('a').forEach(link => {
    link.addEventListener('mouseover', function() {
      const url = this.getAttribute('href');
      if (!cache[url]) {
        fetch(url)
          .then(response => response.text())
          .then(html => {
            cache[url] = html;
          })
          .catch(error => console.error('Preloading error:', error));
      }
    });

    link.addEventListener('click', function(e) {
      e.preventDefault();
      const url = this.getAttribute('href');
      if (cache[url]) {
        document.body.innerHTML = cache[url];
        history.pushState(null, '', url);
      } else {
        window.location.href = url;
      }
    });
  });
});</script>
   
</body>
</html>
